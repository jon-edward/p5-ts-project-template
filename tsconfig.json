{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "dom"
        ],

        "outDir": "./out/intermediate",
        "removeComments": true,
        "target": "ES5",

        "baseUrl": "src",
        "esModuleInterop": true,
        "sourceMap": true,

        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
         
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },

    "include": ["src/*.ts"],
    "exclude": [
        "../node_modules/**/*"
    ]
}
